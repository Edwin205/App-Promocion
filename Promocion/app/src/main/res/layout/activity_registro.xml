<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.onestopinteractive.promocion.Registro"
                android:background="@android:color/holo_red_light"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ViewFlipper

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewFlipper">


            <RelativeLayout
                android:id="@+id/relativelayoutNombre"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Siguiente"
                    android:id="@+id/buttonNombre"
                    android:layout_marginRight="39dp"
                    android:layout_marginEnd="39dp"
                    android:layout_marginBottom="225dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:id="@+id/textViewNombre"
                    android:layout_marginTop="71dp"
                    android:textSize="30sp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/black"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editTextNombrePersona"
                    android:layout_below="@+id/textViewNombre"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="34dp"
                    android:hint="Ingresa tu nombre"
                    android:maxLength="30"/>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/relativelayoutEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Siguiente"
                    android:id="@+id/buttonEmail"
                    android:layout_marginRight="39dp"
                    android:layout_marginEnd="39dp"
                    android:layout_marginBottom="225dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:id="@+id/textViewEmail"
                    android:layout_marginTop="73dp"
                    android:textSize="30sp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/black"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/editTextEmail"
                    android:layout_marginTop="34dp"
                    android:hint="Ingresa tu Email"
                    android:layout_below="@+id/textViewEmail"
                    android:layout_centerHorizontal="true"/>


            </RelativeLayout>




            <RelativeLayout
                android:id="@+id/relativelayoutTelefono"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Siguiente"
                    android:id="@+id/buttonTelefono"
                    android:layout_marginRight="39dp"
                    android:layout_marginEnd="39dp"
                    android:layout_marginBottom="225dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefono"
                    android:id="@+id/textViewTelefono"
                    android:layout_marginTop="67dp"
                    android:textSize="30sp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/black"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/editTextTelefono"
                    android:layout_marginTop="36dp"
                    android:hint="Ingresa tu telefono"
                    android:layout_below="@+id/textViewTelefono"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alta"
                    android:id="@+id/btn_alta"
                    android:layout_weight="1"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:onClick="alta"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textPrueba"
                    android:textSize="15sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativelayoutFin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gracias!"
                    android:id="@+id/textViewGracias"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="62dp"
                    android:textColor="@android:color/black"
                    android:textSize="30sp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Otro"
                    android:id="@+id/buttonOtro"
                    android:layout_below="@+id/textViewGracias"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="54dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Finalizar"
                    android:id="@+id/buttonFinalizar"
                    android:layout_centerVertical="true"
                    android:layout_alignLeft="@+id/buttonOtro"
                    android:layout_alignStart="@+id/buttonOtro"/>


            </RelativeLayout>


        </ViewFlipper>





    </RelativeLayout>


</RelativeLayout>
