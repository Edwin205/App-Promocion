<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".Portada"
                android:background="#e41d2a"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewFlipperPortada">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/RelativeLayoutDatosSupervisor">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supervisor"
                    android:id="@+id/textViewSuper"
                    android:textSize="40sp"
                    android:layout_marginTop="41dp"
                    android:textColor="@android:color/white"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ubicacion"
                    android:id="@+id/textViewUbi"
                    android:layout_marginTop="78dp"
                    android:textSize="40sp"
                    android:textColor="@android:color/white"
                    android:layout_below="@+id/textViewSuper"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Siguiente"
                    android:id="@+id/btnPortada"
                    android:layout_marginTop="68dp"
                    android:background="#ff000000"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_below="@+id/textViewSuperUbicacion"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:id="@+id/buttonSettings"
                    android:textColor="@android:color/white"
                    android:background="#ff000000"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_below="@+id/btnPortada"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="60dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textviewSuperNombre"
                    android:textSize="30sp"
                    android:layout_below="@+id/textViewSuper"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewSuperUbicacion"
                    android:textSize="30sp"
                    android:textColor="@android:color/white"
                    android:layout_below="@+id/textViewUbi"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/RelativeLayoutSettings">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supervisor"
                    android:id="@+id/textViewSupervisor"
                    android:textSize="30sp"
                    android:textColor="@android:color/white"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editTextNombreSupervisor"
                    android:hint="Ingresa tu nombre"
                    android:maxLength="30"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:autoText="false"
                    android:layout_below="@+id/textViewSupervisor"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ubicacion"
                    android:id="@+id/textView"
                    android:layout_marginTop="22dp"
                    android:textSize="30sp"
                    android:textColor="@android:color/white"
                    android:layout_below="@+id/editTextNombreSupervisor"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editTextUbicacion"
                    android:hint="Ingresa tu ubicacion"
                    android:maxLength="30"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:layout_below="@+id/textView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guardar"
                    android:id="@+id/buttonGuardar"
                    android:background="#ff000000"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="23dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_below="@+id/textViewunoDe"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inventario:"
                    android:id="@+id/textViewInventario"
                    android:textSize="30sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_below="@+id/editTextUbicacion"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CH:"
                    android:id="@+id/textView2"
                    android:layout_marginTop="21dp"
                    android:textSize="25sp"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="22dp"
                    android:layout_marginStart="22dp"
                    android:layout_below="@+id/textViewInventario"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editTextSmall"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:layout_alignTop="@+id/textView2"
                    android:layout_toRightOf="@+id/textView2"
                    android:layout_toStartOf="@+id/textViewM"
                    android:maxLength="2"
                    android:hint="NN"
                    android:layout_toLeftOf="@+id/textViewM"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M:"
                    android:id="@+id/textViewM"
                    android:textSize="25sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_alignTop="@+id/editTextSmall"
                    android:layout_alignLeft="@+id/buttonGuardar"
                    android:layout_alignStart="@+id/buttonGuardar"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editTextMediuem"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:layout_alignTop="@+id/textViewM"
                    android:layout_toRightOf="@+id/textViewM"
                    android:layout_toStartOf="@+id/textViewL"
                    android:maxLength="2"
                    android:hint="NN"
                    android:layout_toLeftOf="@+id/textViewL"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="G:"
                    android:id="@+id/textViewL"
                    android:textSize="25sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_alignTop="@+id/editTextMediuem"
                    android:layout_alignRight="@+id/textView"
                    android:layout_alignEnd="@+id/textView"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editTextLarge"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:layout_alignTop="@+id/textViewL"
                    android:layout_toRightOf="@+id/textViewL"
                    android:maxLength="2"
                    android:hint="NN"
                    android:layout_alignRight="@+id/textView8"
                    android:layout_alignEnd="@+id/textView8"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 de cada"
                    android:id="@+id/textViewunoDe"
                    android:layout_below="@+id/textView2"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_alignStart="@+id/textView2"
                    android:layout_marginTop="29dp"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editTextPorcentaje"
                    android:maxLength="1"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:hint="N"
                    android:layout_above="@+id/buttonGuardar"
                    android:layout_toRightOf="@+id/textViewunoDe"
                    android:layout_toLeftOf="@+id/textViewGana"
                    android:layout_toStartOf="@+id/textViewGana"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="gana."
                    android:id="@+id/textViewGana"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:layout_above="@+id/buttonGuardar"
                    android:layout_alignRight="@+id/textViewSupervisor"
                    android:layout_alignEnd="@+id/textViewSupervisor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_alignTop="@+id/editTextPorcentaje"
                    android:layout_toRightOf="@+id/textViewGana"
                    android:layout_toEndOf="@+id/textViewGana"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_alignBottom="@+id/textViewL"
                    android:layout_toRightOf="@+id/textView7"
                    android:layout_toEndOf="@+id/textView7"/>


            </RelativeLayout>

        </ViewFlipper>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
